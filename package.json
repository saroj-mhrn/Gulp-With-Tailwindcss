{
  "name": "gulp-with-tailwind",
  "version": "1.0.0",
  "description": "Gulp with Tailwind CSS Utility",
  "main": "gulpfile.js",
  "scripts": {
    "dev": "gulp",
    "build": "gulp build"
  },
  "options": {
    "config": {
      "tailwindjs": "./tailwind.config.js"
    },
    "paths": {
      "root": "./",
      "src": {
        "base": "./src",
        "css": "./src/css",
        "js": "./src/js",
        "img": "./src/img"
      },
      "dist": {
        "base": "./dist",
        "css": "./dist/css",
        "js": "./dist/js",
        "img": "./dist/img"
      },
      "build": {
        "base": "./build",
        "css": "./build/css",
        "js": "./build/js",
        "img": "./build/img"
      }
    }
  },
  "keywords": [
    "gulp",
    "tailwind",
    "tailwindcss"
  ],
  "author": "Manjunath G",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-postcss": "^8.0.0",
    "gulp-purgecss": "^1.1.1",
    "gulp-purify-css": "^0.1.0",
    "gulp-purifycss": "^0.2.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.1",
    "gulp-webp": "^3.0.0",
    "log-symbols": "^2.2.0",
    "purifycss-extended": "^1.3.6",
    "tailwindcss": "^1.7.5"
  }
}
